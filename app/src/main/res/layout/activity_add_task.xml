<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context="com.example.hp_pc.taskmanage.AddTask">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="Add Task"
        android:textSize="18dp"
         />

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title_tv"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="34dp"
        android:text="Title" />

    <EditText
        android:id="@+id/name_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Title"
        android:inputType="textPersonName"
        android:layout_alignTop="@+id/name_tv"
        android:layout_alignLeft="@+id/desc_et"
        android:layout_alignStart="@+id/desc_et" />

    <TextView
        android:id="@+id/desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name_tv"
        android:layout_alignStart="@+id/name_tv"
        android:layout_below="@+id/name_et"
        android:layout_marginTop="57dp"
        android:text="Description" />

    <EditText
        android:id="@+id/desc_et"
        android:layout_width="wrap_content"
        android:hint="Description"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/desc_tv"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_toEndOf="@+id/desc_tv"
        android:layout_toRightOf="@+id/desc_tv"
        android:ems="10"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/desc_tv"
        android:layout_alignStart="@+id/desc_tv"
        android:layout_below="@+id/desc_et"
        android:layout_marginTop="79dp"
        android:text="Date" />

    <EditText
        android:id="@+id/date_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/desc_et"
        android:layout_alignStart="@+id/desc_et"
        android:layout_alignTop="@+id/date_tv"
        android:hint="DD/MM/YYYY"
        android:ems="10"
        android:inputType="date" />

    <Button
        android:id="@+id/submitTask_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="39dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="13dp" />

    <TextView
        android:id="@+id/time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/date_tv"
        android:layout_alignStart="@+id/date_tv"
        android:layout_below="@+id/date_et"
        android:layout_marginTop="31dp"
        android:text="Time" />

    <EditText
        android:id="@+id/time_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="time"
        android:layout_alignTop="@+id/time_tv"
        android:layout_alignLeft="@+id/date_et"
        android:layout_alignStart="@+id/date_et"
        android:hint="HH:MM(24-hour Format)"/>


</RelativeLayout>
